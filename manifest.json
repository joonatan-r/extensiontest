{
  "manifest_version":2,
  "version":"1.3",
  "name":"skipperclicker",
  "content_scripts":[
    {
     "matches":["<all_urls>"],
     "js":["main.js"]
    }
  ],
  "icons": {
    "48": "icons/message.svg"
  },
  "browser_action": {
    "default_icon": "icons/message.svg"
  },
  "background":{
    "scripts":["background.js"]
  },
  "permissions":[
      "nativeMessaging",
      "storage",
      "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "skipperclicker@myextensions.org",
      "strict_min_version": "80.0"
    }
  }
}
